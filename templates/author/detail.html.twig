{% extends 'base.html.twig' %}

{% block body %}
	<div class="container mt-3">
		<h1>Author Detail</h1>
		<a class="btn btn-success mt-2" href="{{ path('index_author') }}">AUTHOR LIST</a>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Name</th>
					<th>Avatar</th>
					<th>Birthday</th>
					<th>Books</th>
					<th>Menu</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>{{author.name}}</td>
					<td>
						<img src="{{ asset('images/author/'~author.avatar )}}" alt="avatar" width="100" height="120">
					</td>
					<td>{{author.date|date('d/m/Y') }}</td>
					<td>
						{% for b in author.books %}
							<a href="{{ path('detail_book', {'id': b.id}) }}">
								{{ b.name }}
							</a>
							<br>
						{% endfor %}
					</td>

					<td>
						<a class="btn btn-info" href="{{ path('edit_author', {'id' : author.id }) }}">EDIT</a>
						<a class="btn btn-warning" href="{{ path('delete_author', {'id' : author.id }) }}" onclick="return confirm('Are you sure you want to delete this author ?')">DELETE</a>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
{% endblock %}