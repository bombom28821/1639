{% extends 'base.html.twig' %}

{% block title %}View Author{% endblock %}

{% block body %}
	<div class="container-fluid col-7 mt-3">
		<a class="btn btn-success mt-2" href=" {{ path('add_author') }}">ADD AUTHOR</a>
		<table class="table">
			<thead>
				<tr>
					<th scope="col">No.</th>
					<th scope="col">Name</th>
					<th scope="col">Avatar</th>
					<th scope="col">Menu</th>
				</tr>
			</thead>
			<tbody>
				{% for author in authors %}
					<tr>
						<th scope="row">{{loop.index}}</th>
						<td>{{author.name}}</td>
						<td>
                            <img src="{{ asset('images/author/'~author.avatar )}}" alt="avatar" width="100" height="120">
                        </td>
						<td>
							<a href="{{ path('detail_author',{'id' : author.id}) }}" class="btn btn-secondary">Detail</a>
							<a href="{{ path('edit_author',{'id' : author.id}) }}" class="btn btn-success">Update</a>
							<a href=" {{ path('delete_author',{'id' : author.id}) }} "
							onclick="return confirm('Are you sure you want to delete this author ?')" class="btn btn-danger"
							>Delete</a>
						</td>
					</tr>
				{% endfor %}				
			</tbody>
		</table>
	</div>
{% endblock %}