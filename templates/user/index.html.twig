{% extends 'base.html.twig' %}

{% block title %}View Book{% endblock %}

{% block body %}
	<div class="container-fluid col-7 mt-3">
		<a class="btn btn-success mt-2" href=" {{ path('add_staff') }}">ADD STAFF</a>
		<table class="table">
			<thead class="text-center">
				<tr>
					<th scope="col">No.</th>
					<th scope="col">Name</th>
					<th scope="col">Avatar</th>
					<th scope="col">Email</th>
					<th scope="col">Date</th>
					<th scope="col">Address</th>
					<th scope="col">Option</th>
				</tr>
			</thead>
			<tbody>
				{% for staff in staffs %}
					<tr>
						<th scope="row">{{loop.index}}</th>
						<td>{{staff.name}}</td>
						<td>
                            <img src="{{ asset('images/user/'~staff.avatar )}}" alt="cover" width="100" height="120">
                        </td>
						<td>{{staff.email}}</td>
						<td>{{staff.date|date('d/m/Y') }}</td>
						<td>{{staff.address}}</td>
						<td>
							<a href="{{ path('edit_staff',{'id' : staff.id}) }}" class="btn btn-success">Update</a>
							<a href=" {{ path('delete_staff',{'id' : staff.id}) }} " class="btn btn-danger me-2"
							onclick="return confirm('Are you sure you want to delete this staff ?')"
							>Delete</a>
						</td>
					</tr>
				{% endfor %}				
			</tbody>
		</table>
	</div>
{% endblock %}
