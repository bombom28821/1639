{% extends 'base.html.twig' %}

{% block title %}View Category
{% endblock %}

{% block body %}
	<div class="container-fluid col-7 mt-3">
		<a class="btn btn-success mt-2" href="{{ path('add_category') }}">ADD CATEGORY</a>
		<table class="table">
			<thead>
				<tr>
					<th scope="col">No.</th>
					<th scope="col">Name</th>
					<th scope="col">Menu</th>
				</tr>
			</thead>
			<tbody>
				{% for category in categories %}
					<tr>
						<th scope="row">{{loop.index}}</th>
						<td>{{category.name}}</td>
						<td>
							<a href="{{ path('edit_category',{'id' : category.id}) }}" class="btn btn-success">Update</a>
							<a href=" {{ path('delete_category',{'id' : category.id}) }} "
							onclick="return confirm('Are you sure you want to delete this author ?')" class="btn btn-danger"
							>Delete</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}