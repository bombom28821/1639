{% extends 'base.html.twig' %}

{% block title %}View Book{% endblock %}

{% block body %}
	<div class="container-fluid col-7 mt-3">
		<a class="btn btn-success mt-2" href=" {{ path('add_book') }}">ADD BOOK</a>
		<table class="table">
			<thead>
				<tr>
					<th scope="col">No.</th>
					<th scope="col">Name</th>
					<th scope="col">Cover</th>
					<th scope="col">Price</th>
					<th scope="col">Menu</th>
				</tr>
			</thead>
			<tbody>
				{% for book in books %}
					<tr>
						<th scope="row">{{loop.index}}</th>
						<td>{{book.name}}</td>
						<td>
                            <img src="{{ asset('images/book/'~book.cover )}}" alt="cover" width="100" height="120">
                        </td>
						<td>{{book.price}}</td>

						<td>
							<a href="{{ path('detail_book',{'id' : book.id}) }}" class="btn btn-secondary">Detail</a>
							<a href="{{ path('edit_book',{'id' : book.id}) }}"  class="btn btn-success">Update</a>
							<a href=" {{ path('delete_book',{'id' : book.id}) }} "
							onclick="return confirm('Are you sure you want to delete this book ?')"  class="btn btn-danger"
							>Delete</a>
						</td>
					</tr>
				{% endfor %}				
			</tbody>
		</table>
	</div>
{% endblock %}